<!DOCTYPE html>
<html lang="en">
  <%= render "shared/head" %>
  <body class="min-h-screen bg-base-200">
    <div class="flex flex-row">
      <%= render "app/sidebar" %>
      <div class="flex-1">
        <div class="my-2 mr-2 bg-base-100 rounded-lg min-h-[calc(100vh-1rem)]">
          <main class="p-8">
            <%= yield %>
          </main>
        </div>
        <%= render "shared/flash_messages" %>
      </div>
    </div>
    <%= javascript_tag "app" %>
    <%= javascript_tag "sidebar/app" %>
  </body>
</html>
